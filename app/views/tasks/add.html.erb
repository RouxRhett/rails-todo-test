<h1>Add Task</h1>
<%= form_tag(controller:'tasks',action:'add') do%>
  <div class="form-group mb-3">
    <label for="title">Task Title</label>
    <%= text_field_tag("title","",{class:"form-control"}) %>
  </div>

  <div class="form-group mb-3">
    <label for="content">Content</label>
    <%= text_area_tag("content","",{class:"form-control"}) %>
  </div>
  <button type="submit" class="btn btn-success form-group mb-3 form-control">Submit</button>
<% end %>
