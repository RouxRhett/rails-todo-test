<h1>Task List</h1>
<p><%= @msg %></p>
<table class="table table-dark table-striped">
  <tr>
    <th>#</th><th>title</th><th></th><th></th>
  </tr>
  <% @data.each do |obj| %>
  <tr>
    <td><%= obj.id %></td>
    <td><%= link_to(obj.title,"/#{obj.id}",{class:"link-light"})%></td>
    <td><%= link_to("Edit","/edit/#{obj.id}",{class:"link-light"})%></td>
    <td><%= link_to("Delete","javascript:delData(#{obj.id});",{class:"link-light"})%></td>
  </tr>
  <% end %>
</table>
<script>
  function delData(num){
    if (confirm('このデータを削除しますか？')){
      document.location ="/delete/" + num;
    }
    return false;
}
</script>