<h1>Edit Task</h1>
<p><%= @msg %></p>
<%#<%= form_for(@task,url:{controller:'tasks',action:'update',id:@task.id}) do |form| %>
<%= form_with model: @task, url: edit_path do |form| %>
  <div class="form-group mb-3 ">
    <%= form.label :title, 'Task Title' %>
    <%= form.text_field :title,class:'form-control' %>

    <%= form.label :content, 'Content' %>
    <%= form.text_area :content,class:'form-control' %>
    <br>
    <%= form.submit class:"btn btn-success form-group mb-3 form-control"%>
  </div>
<% end %>
